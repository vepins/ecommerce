<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, id: :product_name, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= form.label :price %>
    <%= form.text_field :price, id: :product_price, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= form.label :quantity %>
    <%= form.number_field :quantity, id: :product_quantity, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, id: :product_description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :brand %>
    <%= form.text_field :brand, id: :product_brand, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= form.label :rating %>
    <%= form.number_field :rating, id: :product_rating, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :category_id %>
    <%= form.select(:category_id, @categories.collect{ |c| [c.name, c.id]}, class: "form-control", required: true) %>
  </div>

<div class="form-group">
  <strong>Upload Product Pic:</strong><br>
  <% if @product.new_record? %>
    <%= form.file_field :image, required: true %>
  <% else %>
    <%= form.file_field :image %>
  <% end %>
</div>



  <div class="actions">
    <%= form.submit class: "btn btn-success btn-lg" %>
  </div>
<% end %>
